<% layout("/layouts/boilerplate.ejs") %>

<style>
    .editquestion {
        border-bottom: 2px solid #eee;
    }
    .editquestion h1 {
        font-weight: 600;
    }
</style>

<div class="container mb-6 admin-exam mt-3">
    <form action="/editQuestion/<%= exam._id %>/edit/<%= questions._id %>?_method=PUT" method="POST">
        <div class="container editquestion mb-3">
            <h1>Edit <span style="color: #ff9100;">Question</span></h1>
        </div>
        <div>
            <textarea name="question" id="question" cols="100" rows="5"><%= questions.question %></textarea>
        </div>
        <div class="row">
            <div class="mb-3 col">
                <label for="option1" class="form-label">option 0 :</label>
                <input type="text" class="form-control" id="option1" name="options[]" value="<%= questions.options[0] %>" style="border: 1px solid #555; font-size: 1rem;" required>
            </div>
            <div class="mb-3 col">
                <label for="option2" class="form-label">option 1 :</label>
                <input type="text" class="form-control" id="option2" name="options[]" value="<%= questions.options[1] %>" style="border: 1px solid #555; font-size: 1rem;" required>
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col">
                <label for="option3" class="form-label">option 2 :</label>
                <input type="text" class="form-control" id="option3" name="options[]" value="<%= questions.options[2] %>" style="border: 1px solid #555; font-size: 1rem;" required>
            </div>
            <div class="mb-3 col">
                <label for="option4" class="form-label">option 3 :</label>
                <input type="text" class="form-control" id="option4" name="options[]" value="<%= questions.options[3] %>" style="border: 1px solid #555; font-size: 1rem;" required>
            </div>
        </div>
       
        <div class="mb-3">
            <label for="correct" class="form-label">correct-Option :</label>
            <input type="number" class="form-control" id="correct" name="correct" value="<%= questions.correct %>" placeholder="the correct-option must be in between 0 to 3" style="border: 1px solid #555; font-size: 1rem;" min="0" max="3" required>
        </div>
        <div class="ttbuttons">
            <button class="btn btn-success">save</button>
            <a href="/Questions/<%= exam._id %>"><button type="button" class="btn btn-dark">cancel</button></a>
        </div>
    </form>
</div>